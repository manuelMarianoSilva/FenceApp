<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.yonoc.fence.View.MainActivity">


    <Button
        android:onClick="irAsalto"
        android:text="Ir a Asalto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="login"
        android:text="Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="logout"
        android:text="Logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:textAlignment="center"
        android:id="@+id/nombreEnMainActivity"
        android:text="Aca va el nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textAlignment="center"
        android:id="@+id/maileEnMainActivity"
        android:text="Aca va el mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textAlignment="center"
        android:id="@+id/urlEnMainActivity"
        android:text="Aca va el url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
